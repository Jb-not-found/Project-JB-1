import tkinter as tk
from tkinter import messagebox

def start_game():
    messagebox.showinfo("Start Game", "Game is starting...")  # Replace with your game logic
    # You can add your game starting logic here

# Create the main window
root = tk.Tk()
root.title("The Jb Project")
root.geometry("800x600")  # Set the window size

# Title label
title_label = tk.Label(root, text="The Jb Project", font=("Helvetica", 36))
title_label.pack(pady=100)

# Start game button
start_button = tk.Button(root, text="Start Game", font=("Helvetica", 18), command=start_game)
start_button.pack(pady=20)

# Run the application
root.mainloop()
